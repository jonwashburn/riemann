      have hbound : |(Binet.J (y : ‚ÑÇ)).re| ‚â§ 1 / (12 * y) := by
        have := Complex.abs_re_le_norm (Binet.J (y : ‚ÑÇ))
        have hnorm := J_norm_le_real (x := y) hy_pos
        -- combine
